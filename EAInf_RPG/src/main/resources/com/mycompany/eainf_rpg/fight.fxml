<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.Pane?>


<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/11.0.1" fx:controller="com.mycompany.eainf_rpg.FightController">
   <children>
      <Pane fx:id="playerStuff" layoutY="241.0" prefHeight="159.0" prefWidth="610.0">
         <children>
            <ProgressBar fx:id="playerHpBar" layoutX="64.0" layoutY="122.0" prefWidth="200.0" progress="0.0" />
            <Label layoutX="14.0" layoutY="123.0" text="Your Hp:" />
            <ImageView fx:id="charImage" fitHeight="150.0" fitWidth="200.0" layoutX="30.0" layoutY="-35.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@epicChar.jpg" />
               </image>
            </ImageView>
            <Button fx:id="atckBtn" layoutX="301.0" layoutY="118.0" mnemonicParsing="false" onAction="#btnAtck" text="Attack" />
            <Button fx:id="potionBtn" layoutX="385.0" layoutY="118.0" mnemonicParsing="false" onAction="#btnUsePotion" text="Use Potion" />
         </children>
      </Pane>
      <Pane fx:id="enemyStuff" layoutX="299.0" prefHeight="184.0" prefWidth="311.0">
         <children>
            <ImageView fx:id="enemyImage" fitHeight="174.0" fitWidth="200.0" layoutX="97.0" layoutY="65.0" pickOnBounds="true" preserveRatio="true">
               <image>
                  <Image url="@epicEnemy.jpg" />
